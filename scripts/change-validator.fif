#!/usr/bin/env fift -s
"TonUtil.fif" include
"Asm.fif" include
"GetOpt.fif" include

{ ."usage: " @' $0 type ." <to_addr>" cr
  ."Creates set validator action" cr 1 halt
} : usage
$# 1- -1 and ' usage if

true constant bounce
true =: allow-bounce
false =: force-bounce

$1 bounce parse-load-address force-bounce or allow-bounce and =: bounce 2=: to_addr

<b 4099 32 u, 1 64 u, to_addr addr, b> =: body_boc
body_boc <s csr.
body_boc 2 boc+>B
"set-validator.boc" tuck B>file
."(Saved query to file " type .")" cr